#!/bin/sh

# This script configures the application project
# which is using the UFSLibrary framework.

# It's recommended to run configureSystem.command first.

cd "$(dirname "$0")/../"

UFS_ROOT="$(PWD)"
CONFIG_DIR="$UFS_ROOT/config"

# Import global constants
source "$CONFIG_DIR/constants.sh"

cd ../../

PROJECT_ROOT="$(PWD)"

# Configure Xcode project
libraryPath="$UFS_ROOT/$UFS_REL_FRAMEWORK_BUILD_PATH"
"$CONFIG_DIR/configureXcodeProject.rb"
