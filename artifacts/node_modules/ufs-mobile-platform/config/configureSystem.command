#!/bin/sh

# This script installs required ruby gems for configuring an application
# which is using the UFSLibrary framework.

gem_names=( "xcodeproj" "dir" )

for gem_name in "${gem_names[@]}"
do
    installed=$(gem list $gem_name -i)
        if [ "$installed" == false ]; then
        gem install $gem_name ||
            echo "sudo is required to install a gem" ;
            sudo gem install $gem_name
    fi
done
