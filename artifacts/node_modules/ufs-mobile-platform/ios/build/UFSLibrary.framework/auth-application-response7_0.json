{
    "type": "object",
    "id": "urn:jsonschema:ru:sbrf:efs:platform:wrapper:model:RSResponseWrapper",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "title":"version 1.0",
    "properties": {
        "success": {
            "type": "boolean"
        },
        "body": {
            "oneOf": [
                {
                    "type": "object",
  	                "required": ["MobileResponse"],
                    "additionalProperties": false,
                    "properties": {
                        "MobileResponse": {
                            "type": "object",
                            "id": "urn:jsonschema:ru:sbrf:efs:platform:storage:model:mobile:MobileResponse",
                            "additionalProperties": false,
                            "required": ["permissions", "applications"],
                            "properties": {
                                "permissions": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "applications": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "id": "urn:jsonschema:ru:sbrf:efs:platform:storage:model:mobile:Application",
                                        "additionalProperties": false,
                                        "required": ["name"],
                                        "properties": {
                                            "name": {
                                                "type": "string",
                                                "maxLength": 117
                                            },
                                            "title": {
                                                "type": "string",
                                                "maxLength": 512
                                            },
                                            "applicationIcon": {
                                                "type": "string",
                                                "maxLength": 128
                                            },
                                            "applicationOrder": {
                                                "type": "number"
                                            },
                                            "deviceType": {
                                                "type": "string",
                                                "maxLength": 128
                                            },
                                            "version": {
                                                "type": "string",
                                                "maxLength": 128
                                            },
                                            "settings": {
                                                "type": "string",
                                                "maxLength": 1024
                                            },
                                            "position": {
                                                "type": "string",
                                                "maxLength": 6,
                                                "enum": [
                                                    "TOP",
                                                    "BOTTOM"
                                                ]
                                            },
                                            "default": {
                                                "type": "boolean"
                                            },
                                            "widget": {
                                                "type": "object",
                                                "id": "urn:jsonschema:ru:sbrf:efs:platform:storage:model:Widget",
                                                "additionalProperties": false,
                                                "properties": {
                                                    "x": {
                                                        "type": "number"
                                                    },
                                                    "y": {
                                                        "type": "number"
                                                    },
                                                    "width": {
                                                        "type": "number"
                                                    },
                                                    "height": {
                                                        "type": "number"
                                                    }
                                                }
                                            }                                            
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "required": ["Error"],
                    "additionalProperties": false,
                    "properties": {
                        "Error": {
                            "type": "object",
                            "id": "urn:jsonschema:ru:sbrf:efs:platform:wrapper:model:RSResponseError",
                            "additionalProperties": false,
                            "properties": {
                                "code": {
                                    "type": "string",
                                    "maxLength": 256
                                },
                                "system": {
                                    "type": "string",
                                    "maxLength": 256
                                },
                                "title": {
                                    "type": "string",
                                    "maxLength": 256
                                },
                                "text": {
                                    "type": "string",
                                    "maxLength": 256
                                }
    
                            }
                        }
                    }
                }
            ]
        }
    }
}