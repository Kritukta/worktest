{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "title": "Запрос на изменение пароля",
    "properties": {
        "oldPassword": {
            "type": "string",
            "title": "Старый пароль",
            "maxLength": 50
        },
        "newPassword1": {
            "type": "string",
            "title": "Новый пароль 1",
            "maxLength": 50
        },
        "newPassword2": {
            "type": "string",
            "title": "Новый пароль 2",
            "maxLength": 50
        },
        "username": {
            "type": "string",
            "title": "Имя пользователя",
            "maxLength": 50
        },
        "loginFormType": {
            "type": "string",
            "title": "Тип формы",
            "maxLength": 50
        }
    },
    "additionalProperties": false,
    "required": [
                 "oldPassword",
                 "newPassword1",
                 "newPassword2",
                 "loginFormType",
                 "username"
                 ]
}
